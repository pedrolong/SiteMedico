        <div class="e1116_523">
            <form class="form" action="/agendar" method="post">
            

                <label for="especialidade">Especialidade:</label>
                <div class="especialidade"><input type="text" ></div>

                <label for="hora">Horário da consulta:</label>
                <div class="hora"><input type="time" name="horario"></div>
               
                <script>
                    document.getElementById("horarioInput").addEventListener("input", function() {
                      var horarioInput = this.value;
                      var horaInserida = new Date("1970-01-01T" + horarioInput);
                      
                      // Defina as horas de início e fim permitidas
                      var horaInicioPermitida = new Date("1970-01-01T08:00");
                      var horaFimPermitida = new Date("1970-01-01T18:00");
                    
                      // Verifique se a hora inserida está dentro do intervalo permitido
                      if (horaInserida < horaInicioPermitida || horaInserida > horaFimPermitida) {
                        document.getElementById("horarioError").textContent = "Horário fora do intervalo permitido (08:00 - 18:00).";
                        this.setCustomValidity("Horário fora do intervalo permitido (08:00 - 18:00).");
                      } else {
                        document.getElementById("horarioError").textContent = "";
                        this.setCustomValidity("");
                      }
                    });
                    </script>
                    
                   


                <label for="data">Data da consulta:</label>
                <div class="data"><input type="date" name="data"></div>
                <button type="submit" class="botao">Confirmar sua consulta</button>
            </form>
