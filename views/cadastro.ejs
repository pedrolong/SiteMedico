    <script>
      function validarFormulario() {
        // Validar CPF
        var cpfInput = document.getElementById('cpf');
        var cpfValue = cpfInput.value.replace(/[^\d]+/g, ''); // Remove caracteres não numéricos

        if (!validarCPF(cpfValue)) {
          alert('CPF inválido');
          return false;
        }

        // Validar número de telefone
        var telefoneInput = document.getElementById('numero_telefone');
        var telefoneValue = telefoneInput.value.replace(/[^\d]+/g, ''); // Remove caracteres não numéricos

        if (!validarTelefone(telefoneValue)) {
          alert('Número de telefone inválido');
          return false;
        }

        // Outras validações podem ser adicionadas aqui

        return true;
      }

      // Função para validar CPF
      function validarCPF(cpf) {
        cpf = cpf.replace(/[^\d]+/g, ''); // Remove caracteres não numéricos

        if (cpf === '' || cpf.length !== 11 || /^(\d)\1+$/g.test(cpf)) {
          return false;
        }

        var digitoVerificador = function (cpfParcial) {
          var soma = 0;
          for (var i = 0; i < 9; i++) {
            soma += parseInt(cpfParcial[i]) * (10 - i);
          }

          var resto = soma % 11;
          var resultado = resto < 2 ? 0 : 11 - resto;

          return resultado;
        };

        var primeiroDigito = digitoVerificador(cpf.substring(0, 9));
        var segundoDigito = digitoVerificador(cpf.substring(0, 9) + primeiroDigito);

        return cpf.substring(9) == primeiroDigito.toString() + segundoDigito.toString();
      }

      // Função para validar número de telefone do Brasil
      function validarTelefone(telefone) {
        // O número de telefone deve ter 11 dígitos
        return /^\d{11}$/.test(telefone);
      }

      // Função para voltar à página anterior
